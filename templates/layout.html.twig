<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>{% block title %}Dashboard | RedGekko{% endblock %}</title>

    <link rel="icon" href="{{ '/favicon.ico' }}"/>

    <style>
        #particles-js{ position: absolute; width: 100%; height: 100%; z-index: 0; }
        #particles-js canvas{ position: absolute; width: 100%; height: 100%; z-index: -1;}
    </style>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/css/fontawesome.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ '/css/adminlte.min.css' }}">
    <!-- style -->
    <link rel="stylesheet" href="{{ '/css/style.css' }}">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    {% block stylesheet %}{% endblock stylesheet %}

    {% block head %}
    {% endblock head %}
</head>
<body class="hold-transition layout-top-nav layout-navbar-fixed">
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
        <div id="particles-js"></div>
        <div class="container">
        
            <a href="{{ '/' }}" class="navbar-brand">
                <img src="{{ '/img/bitcoin.svg' }}" alt="Crypto Trading Bot Logo" class="brand-image img-circle elevation-1"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">RedGekko</span>
            </a>
            <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="{{ '/' }}" class="nav-link">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ '/balances' }}" class="nav-link">Balances</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ '/trades' }}" class="nav-link">Trades</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ '/pairs' }}" class="nav-link">Pairs</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ '/orders' }}" class="nav-link">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ '/signals' }}" class="nav-link">Signals</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ '/tools/candles' }}" class="nav-link">Candles</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ '/backtest' }}" class="nav-link">Backtest</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ '/logs' }}" class="nav-link">Logs</a>
                    </li>

                    {% set desks = desks() %}
                    {% if desks|length > 0 %}
                        <li class="nav-item dropdown">
                            <a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Desks</a>
                            <ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
                                {% for desk in desks %}
                                    <li><a href="/desks/{{ loop.index - 1 }}" class="dropdown-item">{{ desk }} </a></li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <!-- /.navbar -->

    {% block content %}
    {% endblock content %}

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
            v2020.1.67
        </div>
        <!-- Default to the left -->
        <strong><a href="https://github.com/mark-sch/RedGekko" target="_new">RedGekko</a> trading bot.</strong> All rights reserved.
    </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
